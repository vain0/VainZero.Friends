{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "rootDir": ".",
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "client/**/*",
    "core/**/*"
  ]
}