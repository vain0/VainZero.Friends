{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "max-classes-per-file": false,
    "indent": true,
    "space-before-function-paren": false,
    "interface-name": [
      false
    ],
    "arrow-parens": false,
    // Pending fix for shorthand property names.
    "object-literal-sort-keys": false
  },
  "rulesDirectory": []
}